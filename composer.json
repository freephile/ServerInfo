{
	"name": "mediawiki/serverinfo",
	"type": "mediawiki-extension",
	"description": "Provides administrators with valuable server information including phpinfo() and clock source",
	"keywords": [
		"wiki",
		"mediawiki",
		"phpinfo",
		"clocksource",
		"apache status",
		"apache info"
	],
	"homepage": "https://github.com/freephile/ServerInfo",
	"readme": "README.md",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Greg Rundlett",
			"email": "greg.rundlett@gmail.com",
			"role": "Maintainer"
		}
	],
	"support": {
		"issues": "https://github.com/freephile/ServerInfo/issues"
	},
	"require": {
		"composer/installers": "^1.0.1"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "35.0.0",
		"mediawiki/minus-x": "1.1.1",
		"php-parallel-lint/php-console-highlighter": "0.5.0",
		"php-parallel-lint/php-parallel-lint": "1.2.0"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"phpcs -p -s",
			"minus-x check ."
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	},
	"config": {
		"optimize-autoloader": true,
		"prepend-autoloader": false
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.x-dev"
		}
	}
}
